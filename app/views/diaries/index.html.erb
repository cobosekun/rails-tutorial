<%= stylesheet_link_tag 'diary' %>
<p style="color: green"><%= notice %></p>

<h1>日記一覧画面</h1>

<div id="diaries">
  <table border>
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>登録日時</th>
        <th>更新日時</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>

    <tbody>
      <% @diaries.each do |diary| %>
        <tr>
          <td><%= diary.id %></td>
          <td><%= link_to diary.title, diary %></td>
          <td><%= diary.created_at.strftime("%Y年%m月%d日 %H時%M分%S秒") %></td>
          <td><%= diary.updated_at.strftime("%Y年%m月%d日 %H時%M分%S秒") %></td>
          <td><%= link_to 'Edit', edit_diary_path(diary) %></td>
          <td><%= link_to 'Destory', diary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to "日記を新規作成", new_diary_path %>